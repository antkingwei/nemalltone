<?xml version="1.0" encoding="utf-8"?>
<com.rolmex.android.nemalltone.widget.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/left_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <FrameLayout 
        android:layout_width="match_parent"      
        android:layout_height="match_parent"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bg_color_deep"
            android:id="@+id/menu_list_ll"
            >
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="常用菜单"
                android:layout_marginLeft="10dp"
                />
            <com.rolmex.android.nemalltone.widget.MyListView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/my_menu_list"
                ></com.rolmex.android.nemalltone.widget.MyListView>
        </LinearLayout>
         <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/bg_color_deep"
            android:id="@+id/all_munu_ll"
            >
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="所有菜单"
                android:layout_marginLeft="10dp"
                />
            <com.rolmex.android.nemalltone.widget.MyListView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/my_menu_all"
                ></com.rolmex.android.nemalltone.widget.MyListView>
            </LinearLayout>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/left_place_holder"
                />
        </LinearLayout>
    </FrameLayout>

</com.rolmex.android.nemalltone.widget.ObservableScrollView>